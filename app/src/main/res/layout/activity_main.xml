<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="calculator"
        android:onClick="goto_somewhere"
        android:text="Calculator" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="list_view"
        android:onClick="goto_somewhere"
        android:text="ListView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="file_manager"
        android:onClick="goto_somewhere"
        android:text="File Manager" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="service_test"
        android:onClick="goto_somewhere"
        android:text="Service Test" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="sharedpref_test"
        android:onClick="goto_somewhere"
        android:text="SharedPreferences Test" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="fore_service_test"
        android:onClick="goto_somewhere"
        android:text="Foreground Service Test" />
</LinearLayout>